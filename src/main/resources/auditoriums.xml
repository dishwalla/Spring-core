<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-3.2.xsd">
	
	
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:auditorium_a.properties</value>
				<value>classpath:auditorium_b.properties</value>
				<value>classpath:auditorium_o.properties</value>
			</list>
		</property>
		<property name="ignoreResourceNotFound" value="true" />
		<property name="systemPropertiesMode">
			<util:constant
					static-field="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer.SYSTEM_PROPERTIES_MODE_OVERRIDE" />
		</property>
	</bean>
	
	<bean id="auditorium" class="ua.epam.spring.hometask.domain.Auditorium" p:name="${name}" p:numberOfSeats="${number_of_seats}" p:vipSeats="#{'${vip_seats}'.split(',')}">
	</bean>
	
	<bean id="idGenerator" class="ua.epam.spring.hometask.IdGenerator" factory-method="getNextAuditoriumId"/>
	
	<util:map id="auditoriumMap" map-class="java.util.LinkedHashMap">
		<entry key="idGenerator" value-ref="auditorium" />
	</util:map>
	
</beans>